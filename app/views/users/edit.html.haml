#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 プロフィール変更
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "マイページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :"自己紹介"
          .field-input
            = f.text_area :introduce, size: "45x5"
        
        .field
          .field-label
            = f.label :age, '年齢', class:'control-label'
            = f.select :age, [["",""], ["10代","10"], ["20代","20"], ["30代","30"], ["40代","40"], ["50代","50"], ["60代","60"], ["70代以上","70"] ], {},   class: 'form-control'

        .field
          .field-label
            = f.label :"sex"
            = f.select :sex, [["",""], ["女性","女性"], ["男性","男性"]], {},   class: 'form-control'
            
        .actions
          = f.submit "Update", class: 'btn'
